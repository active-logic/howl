⊐ Ex = System.Exception;

⊓ Active.Howl{
‒ ○ DotNet{

    ㄹ dotnet = "/usr/local/share/dotnet/dotnet";

    ‒ ᆞ Build(ㄹ args, ㄹ workdir, ㅇ dry)
    → ⦿["build", args, workdir, dry];

    ‒ ᆞ New(ㄹ α, ㄹ δ, ㄹ ω, ㅇ dry){
        ∙ ㄸ = ⦿["new", α, δ, dry];
