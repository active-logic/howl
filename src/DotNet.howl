    ‒ ᆞ ⦿[ㄹ command, ㄹ args, ㄹ workdir, ㅇ dry]{╭{
        ㄹ str;
        🐰 str = $"dotnet {command} {args}";
        ⤴ (dry) ⮐ 0;
        ᆞ ㄸ = Runner.Cmd(dotnet, $"{command} {args}", workdir, dry);
        ⮐ ㄸ;
    }}

}}
