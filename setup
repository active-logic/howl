#!/bin/bash
repo="https://github.com/active-logic/howl"
url="$repo/releases/download/0.0.17/howl.tgz"
set   -euo pipefail
mkdir howl
curl  -Ls $url | tar xz --strip 1 -C howl
sudo  rm -rf /usr/local/Howl
pushd howl/build > /dev/null
sudo  dotnet publish --nologo -v quiet -r osx-x64 -o /usr/local/Howl
ln    -sf /usr/local/Howl/build /usr/local/bin/howl
popd  > /dev/null
sudo  rm -rf howl
howl
